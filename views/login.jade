extends layout

block content
  div.ml_nav.navbar-toggleable-md.navbar-inverse.fixed-top
    div.container-fluid
      div.row.justify-content-between
        div.col-2
          button.navbar-toggler.navbar-toggler-left(data-toggle="collapse", data-target="#navbarCollapse", aria-controls="navbarCollapse", aria-expanded="false", aria-label="Toggle navigation")
            img(src="/images/icons/user.png")
        div.col-2
          a.navbar-brand(href="#")
            img(src="/images/icons/msg.png")
    #navbarCollapse.navbar-collapse.collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href="#") Home
  body
    form(action="/login" method="POST")
      div
        label="Username:"
        input(type="text" name="username")
      div
        label="Password:"
        input(type="text" name="password")
      div
        input(type="submit" value="Log In")

    footer
      p #{ttt}